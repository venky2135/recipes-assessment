package com.securin.recipes.dto;

import com.securin.recipes.entity.Recipe;
import java.util.Map;

public record RecipeDto(
  Long id, String cuisine, String title, Double rating,
  Integer prep_time, Integer cook_time, Integer total_time,
  String description, Map<String,Object> nutrients, String serves
) {
  public static RecipeDto from(Recipe r) {
    return new RecipeDto(
      r.getId(), r.getCuisine(), r.getTitle(), r.getRating(),
      r.getPrepTime(), r.getCookTime(), r.getTotalTime(),
      r.getDescription(), r.getNutrients(), r.getServes()
    );
  }
}
