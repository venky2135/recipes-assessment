package com.securin.recipes.util;

import java.util.regex.*;

public record OpValue(String op, String value) {
  private static final Pattern P = Pattern.compile("^\s*(<=|>=|=|<|>)?\s*([-+]?[0-9]+\.?[0-9]*)\s*$");
  public static OpValue parse(String input) {
    if (input == null || input.isBlank()) return null;
    Matcher m = P.matcher(input);
    if (!m.matches()) return null;
    String op = m.group(1) == null ? "=" : m.group(1);
    return new OpValue(op, m.group(2));
  }
}
